{
    "manifest_version": 3,
    "name": "Home Page",
    "short_name": "Home Page",
    "author": "Nalinda Dissanayake",
    "developer": {
        "name": "Nalinda Dissanayake",
        "url": "https://nalindard.github.io/"
    },
    "description": "Make It Yours. Enjoy the Life. Freedom with Firefox !",
    "version": "0.0.1",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "search",
        "bookmarks",
        "theme",
        "topSites",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*",
                "<all_urls>"
            ],
            "js": [
                "scripts/content-script.js"
            ]
        }
    ],
    "chrome_url_overrides": {
        "newtab": "pages/new-tab.html"
    },
    "action": {
        "default_title": "Home Page",
        "default_popup": "pages/popup.html",
        "default_icon": "icons/icon-256.png"
    },
    "background": {
        "scripts": [
            "./scripts/service-worker.js"
        ],
        "type": "module"
    }
}